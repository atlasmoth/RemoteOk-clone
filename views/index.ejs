<!DOCTYPE html>
<html lang="en">
  <%- include("./head.ejs"); %>
  <body>
    <%- include("./header.ejs"); %>
  </body>
  <div class="container">
    <div class="jobs">
      <% jobs.forEach(function(job) { %>
      <div class="job">
        <img src="images/dummy.jpg" alt="logo" />
        <div class="information">
          <h4><%= job.companyName %></h4>
          <h3><%= job.position %></h3>
        </div>
        <div class="tags">
          <button>CSS</button>
          <button>HTML</button>
          <button>Javascript</button>
        </div>
        <button class="apply">Apply</button>
        <!-- <h3><%= job.jobDescription %></h3> -->
      </div>
      <% }); %>
    </div>
  </div>
</html>
